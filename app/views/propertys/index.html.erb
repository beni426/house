<h1>物件情報一覧</h1>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>

<% @propertys.each do |property| %>
  <tr>
    <td><%= property.property_name %></td>
    <td><%= property.rent %>円</td>
    <td><%= property.address %></td>
    <td><%= property.age %>年</td>
    <td><%= property.memo %></td>
    <td><%= link_to '詳細を確認する', property_path(property.id) %></td>
    <td><%= link_to "ブログを編集する", edit_property_path(property.id) %></td>
    <td><%= link_to 'ブログを削除する', property_path(property.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_property_path %>